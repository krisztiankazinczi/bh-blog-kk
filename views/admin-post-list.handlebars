<div class="bg-secondary">
    <div class="container overflow-auto vh-100">
        <a href="http://localhost:3000/newPost"><input class="btn btn-info text-white my-3" value="New Post"></a>
        
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-dark">
            <thead>
                <div class="row">
                    <div class="col-3 w-100">
                        <th class="align-middle text-center">Title</th>
                    </div>
                    <div class="col-3 w-100">
                        <th class="align-middle text-center">Author</th>
                    </div>
                    <div class="col-3 w-100">
                        <th class="align-middle text-center">Last modified Date</th>
                    </div>
                    <div class="col-3 w-100">
                        <th class="align-middle text-center">Operations</th>
                    </div>
                </div>
            </thead>
            <tbody>
                {{#each posts}}
                <div class="row">
                    <tr>
                        <div class="col-3">
                            <td class="align-middle text-center">{{#if this.draft}}<b>Draft</b>:{{/if}} {{this.title}}</td>
                        </div>
                        <div class="col-3">
                            <td class="align-middle text-center">{{this.author}}</td>
                        </div>
                        <div class="col-3">
                            <td class="align-middle text-center">{{#if this.published_at}}{{this.last_modified_at}}{{/if}} {{#unless this.published_at}}N/A{{/unless}}</td>
                        </div>
                        <div class="col-3">
                            <td class="align-middle text-center"><a
                                    href="http://localhost:3000/editPost/{{this.id}}"><button
                                        class="btn btn-info">Edit</button></a></td>
                        </div>
                    </tr>
                </div>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
    </div>
    